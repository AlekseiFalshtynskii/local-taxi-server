        value="$2a$04$dKTY94Ln2EBN5qxzhRZK9uToiP2kInYKwL8rA3uUDv5KBqkUzLkSO"/>
      <column name="resource_ids" value="localtaxi"/>
      <column name="scope" value="read,write"/>
